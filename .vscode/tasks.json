{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run JavaScript File",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "node \"${file}\" < input.txt > output.txt"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
